@startuml

interface IPaymentGateway {
    +Authorize(amount : decimal) : AuthorizationResult
}

class StripeGateway {
    +Authorize(amount : decimal) : AuthorizationResult
}

class OrderService {
    +Process(order : Order) : AuthorizationResult
}

class Order {
    +Amount : decimal
}

class AuthorizationResult {
    +Success : bool
    +Message : string
}

IPaymentGateway <|.. StripeGateway
OrderService --> StripeGateway : creates
OrderService --> Order
StripeGateway --> AuthorizationResult
@enduml